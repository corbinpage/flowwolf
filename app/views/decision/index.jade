extends ../layout

block content
  .row
    h1 All Decisions
    .col-sm-offset-1.col-sm-10
      table.table.table-bordered.table-hover.table-striped
        thead
          tr
            th Name
            th Description
        tbody
          each d in decisions
            tr
              td 
                a(href='/decision/#{slug}')= d.name
              td= d.description
